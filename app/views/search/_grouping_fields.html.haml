= content_tag :fieldset, { class: 'fields', 'data-object-name' => f.object_name } do
  = content_tag(:legend, "匹配条件组内#{f.combinator_select}条件 #{link_to_remove_fields t('remove'),f}", nil, false)
  = f.condition_fields do |c|
    = render 'condition_fields', f: c
  = button_to_add_fields '添加条件', f, :condition
  = f.grouping_fields do |g|
    = render 'grouping_fields', f: g
  = button_to_nest_fields '添加条件组', :grouping